@model IEnumerable<ProjetoEasypark.Models.Estacionamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Emprasas de Estacionamento</h1>

<p>
    <a asp-action="Create">Inserir nova empresa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeEmpresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lugadouro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Complemento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CEP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.VagaNormal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VagaIdoso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VagaDeficiente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VagaElerica)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cnpj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lugadouro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complemento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CEP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VagaNormal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VagaIdoso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VagaDeficiente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VagaElerica)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Cliente_id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Cliente_id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Cliente_id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
